using System;

class LayerCube
{

public static int[,] primenumberGrid = new int[,]{{2,5},{3,7}};

private int magnitude = 0;

private int count = 0;
private int positionA_x = 0;
private int positionB_y = 0;

private int countB = 0;
private int positionB_x = 0;
private int positionB_Y = 0;

//private float delta_A = 0;?
//private float delta_B = 0;?

public Magnitude { get { return magnitude; } set { type = magnitude; } }


public void Reset(int magnitudue)
{  
positionA_x = 0;
positionA_y = 0;

positionB_x = 0;
positionB_Y = 0;

delta_A = 0;
delta_B = 0;

for(int i = 0; i < magnitude; i++)
    Update();
}


public void Update()
{
UpdatePosition(positionA_x, positionA_y,stateA);

UpdatePosition(positionB_x, positionB_y,stateA);

count++;
countB++;
}

public void UpdatePosition(int ref x,int ref y, bool ref state)
{

if(state)
if(countB == primenumberGrid[positionB_x,positionB_y)
{

if(x == 0 && y == 0)
   y = 1;

if(x == 0 && y == 1)
   x = 1;

if(x == 1 && y == 1)
   y = 0;

if(x == 1 && y == 0)
   x = 0;

 countB = 0;
}
else
if(count == primenumberGrid[positionA_x,positionA_y)
{

if(x == 0 && y == 0)
   x = 1;

if(x == 1 && y == 0)
   y = 1;

 if(x == 0 && y == 1)
   x = 0;
 
 if(x == 1 && y == 1)
   y = 0;

 count = 0;
}

if((positionA_x == positionB_x) && (positionA_y == positionB_y))
{

if(stateA == true)
stateA = false;
else
stateA = true;

if(stateB == true)
stateB = false;
else
stateB = true;

int rest = (count + countB) / 2;

count = rest;
countB = rest; 

}

}

public void UpdatePosition(int ref x,int ref y)
{


if(left)
if(countB == primenumberGrid[positionB_x,positionB_y)
{

if(positionB_x == 0 && positionB_y == 0)
   positionB_y = 1;

if(positionB_x == 0 && positionB_y == 1)
   positionB_x = 1;

if(positionB_x == 1 && positionB_y == 1)
   positionB_Y = 0;

if(positionB_x == 1 && positionB_y == 0)
   positionB_x = 0;

 countB = 0;
}
else
if(count == primenumberGrid[positionA_x,positionA_y)
{

if(positionA_x == 0 && positionA_y == 0)
   positionA_x = 1;

if(positionA_x == 1 && positionA_y == 0)
   positionA_Y = 1;

 if(positionA_x == 0 && positionA_y == 1)
   positionA_x -= 1;
 
 if(positionA_x == 1 && positionA_y == 1)
   positionA_Y = 0;

 count = 0;
}



}



